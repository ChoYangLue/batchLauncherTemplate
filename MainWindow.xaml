<Window x:Class="batchLauncherTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:batchLauncherTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="FolderOpenButton" Content="Open" HorizontalAlignment="Left" Margin="645,23,0,0" VerticalAlignment="Top" Click="FolderOpenButton_Click"/>
        <TextBox x:Name="FolderTextbox" HorizontalAlignment="Left" Margin="40,27,0,0" Text="Path" TextWrapping="Wrap" VerticalAlignment="Top" Width="585"/>
        <TextBox x:Name="OutputLogTextbox" HorizontalAlignment="Left" Margin="212,133,0,0" Text="Log" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="578" Height="291"/>
        <Button x:Name="RunButton" Content="Run" HorizontalAlignment="Left" Margin="645,81,0,0" VerticalAlignment="Top" Click="RunButton_Click"/>
    </Grid>
</Window>
